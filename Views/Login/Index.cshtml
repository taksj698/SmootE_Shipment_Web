@{
    ViewData["Title"] = "Authen";
    Layout = "~/Views/Shared/_Blank.cshtml";
}


<main>
    <div class="container">

        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                        <div class="d-flex justify-content-center py-4">
                            <a href="index.html" class="logo d-flex align-items-center w-auto">
                                <img src="assets/img/logo.png" alt="">
                                <span class="d-none d-lg-block">SASE</span>
                            </a>
                        </div><!-- End Logo -->

                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">Login to Your Account</h5>
                                </div>
                                <form class="row g-3 needs-validation" novalidate>
                                    <div class="col-12">
                                        <label class="form-label">ชื่อผู้ใช้งาน</label>
                                        <div class="input-group has-validation">
                                            <input type="text" name="username" class="form-control" id="log_username" placeholder="username" required>
                                            <div class="invalid-feedback">Please enter your username.</div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">รหัสผ่าน</label>
                                        <input type="password" name="password" class="form-control" id="log_password" placeholder="********" required>
                                        <div class="invalid-feedback">Please enter your password!</div>
                                    </div>
                                    <div class="col-12">
                                        <input class="btn btn-sm btn-primary w-100 text-white" type="button" value="เข้าสู่ระบบ" onclick="controller.login();" />
                                    </div>
                                    <div class="col-12">
                                        <p class="small mb-0">Don't have account? <a href="@Url.Action("", "Register")">Create an account</a></p>
                                    </div>
                                 @*    <hr> *@
                                </form>
@*                                 <div class="col-12">
                                    <input class="btn btn-sm facebook-color w-100 text-white" type="button" value="เข้าสู่ระบบด้วย Facebook" onclick="controller.login();" />
                                </div>
                                <div class="col-12 mt-2">
                                    <input class="btn btn-sm line-color w-100 text-white" type="button" value="เข้าสู่ระบบด้วย Line" onclick="controller.login();" />
                                </div>
                                <div class="col-12 mt-2">
                                    <input class="btn btn-sm gmail-color w-100 text-white" type="button" value="เข้าสู่ระบบด้วย Gmail" onclick="controller.login();" />
                                </div> *@
                              
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>

    </div>
</main><!-- End #main -->
@section Scripts {
    <script>
        $(document).ready(function () {
            controller.login = function () {
                services.AjaxPostData("@Url.Action("Login", "Login")", { userName: $('#log_username').val(), passWord: $('#log_password').val() }, function (response) {
                    services.CustomAlert1(response);
                });
            }
        });
    </script>
}