@model List<QuickVisualWebWood.Core.pageModels.Home.WorklistData>


<table class="table datatable ">
    <thead>
        <tr>
            <th class="text-center" scope="col">เลขที่ชั่ง</th>
            <th class="text-center" scope="col">ทะเบียนรถ</th>
            <th class="text-left">ชื่อลูกค้า</th>
            <th class="text-center">วันที่ทำรายการ</th>
            <th class="text-center">ผลการประเมิน</th>
            <th class="text-center">สถานะ</th>
            <th class="text-left">หมายเหตุ</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="text-center"><a href="@Url.Action("Index", "Estimate")/@item.SequenceID"><span class="badge bg-info me-1">@item.SequenceID</span></a></td>
                    <td class="text-center">@item.Plate</td>
                    <td>@item.CustomerName</td>
                    <td class="text-center">@item.TransctionDate</td>
                    <td class="text-center">@item.EvaluationResults</td>
                    <td class="text-center">@item.Status</td>
					<td>@item.Remark</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">ไม่พบข้อมูล</td>
            </tr>
        }
    </tbody>
</table>