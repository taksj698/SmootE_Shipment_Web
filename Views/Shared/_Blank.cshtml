    var backgroundImageUrl = Url.Content("~/bg.png");
}

<head>
	<meta charset="utf-8">
	<meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Quick Visual Wood</title>
	<meta content="" name="description">
	<meta content="" name="keywords">


	<link href="~/assets/img/favicon.png" rel="icon">
	<link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">


	<link href="https://fonts.gstatic.com" rel="preconnect">
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">


	<link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
	<link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
	<link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
	<link href="~/assets/vendor/quill/quill.snow.css" rel="stylesheet">
	<link href="~/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
	<link href="~/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
	<link href="~/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <link href="~/assets/css/style.css" rel="stylesheet">
    <link href="~/assets/css/themes.css" rel="stylesheet">
</head>

<body style="background-image: url('@backgroundImageUrl'); background-size: cover; background-position: center;background-repeat: no-repeat;">
	@RenderBody()
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/sweetalert.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<script src="~/assets/vendor/apexcharts/apexcharts.min.js"></script>
	<script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="~/assets/vendor/chart.js/chart.umd.js"></script>
	<script src="~/assets/vendor/echarts/echarts.min.js"></script>
	<script src="~/assets/vendor/quill/quill.js"></script>
	<script src="~/assets/vendor/simple-datatables/simple-datatables.js"></script>
	<script src="~/assets/vendor/tinymce/tinymce.min.js"></script>
	<script src="~/assets/vendor/php-email-form/validate.js"></script>


	<script src="assets/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        var services = {};
        var controller = {};
        $(document).ready(function () {

            services.AjaxPostData = function (api, data, callback) {
                $.ajax({
                    url: api,
                    type: 'POST',
                    data: data,
                    async: false,
                    success: callback,
                });
            }
            services.AjaxPostForm = function (api, form, callback) {
                $.ajax({
                    url: api,
                    type: 'POST',
                    data: form,
                    processData: false,
                    contentType: false,
                    async: false,
                    success: callback,
                });
            }
            services.CustomAlert1 = function (response) {
                Swal.fire({
                    icon: response.type,
                    html: response.message,
                    showDenyButton: false,
                    showCancelButton: false,
                    allowOutsideClick: false,
                    confirmButtonText: 'ตกลง',
                }).then((result) => {
                    if (result.isConfirmed) {
                        if (response.url != undefined || response.url != null) {
                            if (response.url == "reload") {
                                location.reload();
                            } else {
                                var redir = window.location.protocol + "//" + window.location.host + "/" + response.url;
                                window.location.href = redir;
                            }

                        }
                    }
                })
            }
            services.CustomTableBinding = function (eleid) {
                $("#" + eleid).DataTable().destroy();
                $("#" + eleid).dataTable({
                    "bPaginate": false,
                    "bLengthChange": false,
                    "bFilter": true,
                    "bInfo": false,
                    "paging": true,
                    "pageLength": 10,
                    "searching": true,
                    "oLanguage": {
                        "sSearch": "ค้นหา"
                    },
                    "bAutoWidth": false,
                    "dom": 'Bfrtip',
                    "buttons": [
                        'copy', 'csv', 'excel', 'print'
                    ]
                });
            }
            services.CustomBinding = function (response, eleid) {
                var val = $($.parseHTML(response)).find('#' + eleid).html();
                $("#" + eleid).html(val);
            }
            services.ConfirmAlert = function (html, cfbtn, cfcolorbtn, clbtn, clcolorbtn, callback) {
                if (html == undefined || html === "") {
                    html = 'ยืนยันทำรายการ';
                }
                if (cfbtn == undefined || cfbtn === "") {
                    cfbtn = 'ยืนยัน';
                }
                if (cfcolorbtn == undefined || cfcolorbtn === "") {
                    cfcolorbtn = '#28B779';
                }
                if (clbtn == undefined || clbtn === "") {
                    clbtn = 'ยกเลิก';
                }
                if (clcolorbtn == undefined || clcolorbtn === "") {
                    clcolorbtn = '#DA542E';
                }
                Swal.fire({
                    html: html,
                    showConfirmButton: true,
                    confirmButtonText: cfbtn,
                    confirmButtonColor: cfcolorbtn,
                    showCancelButton: true,
                    cancelButtonText: clbtn,
                    cancelButtonColor: clcolorbtn,
                    allowOutsideClick: false,
                }).then((callback))
            }
        });
    </script>
</body>

</html>