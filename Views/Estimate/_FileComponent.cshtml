@model List<QuickVisualWebWood.Core.pageModels.PurchaseRequisition.DocUpload>

<table class="table table-bordered mt-2" id="componentDocfile">
	<tr>
		<th scope="col">ชื่อไฟล์</th>
	</tr>
	<tbody>
		@if (Model != null && Model != null && Model.Count > 0)
		{
			foreach (var item in Model)
			{
				<tr>
					<td>
						@if (!item.IsReadonly)
						{
							<span class="badge bg-danger me-1 deltefile" onclick="controller.deletefile('@item.id')">ลบ</span>
						}
						<a href="@string.Format("data:{0};base64,{1}",item.ContentType,item.base64)" download="@item.filename">@item.filename</a>
					</td>
				</tr>
			}
		}
		else
		{
			<tr>
				<td class="text-center">ไม่พบข้อมูล</td>
			</tr>
		}
	</tbody>
</table>